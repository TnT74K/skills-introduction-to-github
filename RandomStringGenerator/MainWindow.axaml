<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="300"
        x:Class="RandomStringGenerator.MainWindow"
        Title="Random String Generator"
        Width="500" Height="300"
        Background="White">
    
    <StackPanel Margin="20" Spacing="15">
        <TextBlock Text="Random String Generator" 
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="Black"
                   HorizontalAlignment="Center"/>
        
        <Border BorderBrush="Black" 
                BorderThickness="2" 
                Padding="10"
                Background="White">
            <TextBox Name="GeneratedStringTextBox" 
                     IsReadOnly="True"
                     FontSize="18"
                     FontWeight="Bold"
                     HorizontalAlignment="Center"
                     TextAlignment="Center"
                     Background="White"
                     Foreground="Black"
                     BorderThickness="0"
                     Watermark="Generated string will appear here"/>
        </Border>
        
        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Spacing="20">
            <Button Name="GenerateButton" 
                    Content="Generate" 
                    Width="150" 
                    Height="40"
                    FontSize="16"
                    Background="Black"
                    Foreground="White"
                    Click="GenerateButton_Click"/>
            
            <Button Name="HistoryButton" 
                    Content="View History" 
                    Width="150" 
                    Height="40"
                    FontSize="16"
                    Background="Black"
                    Foreground="White"
                    Click="HistoryButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
